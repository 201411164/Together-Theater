<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cL1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".ActivityForVideoTest">
    <VideoView
            android:layout_width="1000dp"
            android:layout_height="300dp"
            android:id="@+id/videoView1"
            android:clipChildren="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="-10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.868"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>

    <Button
            android:id="@+id/btnStart"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="시작"
            android:onClick="StartButton"
            tools:layout_editor_absoluteY="16dp" app:layout_constraintEnd_toStartOf="@+id/btnPause"
            android:layout_marginEnd="68dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.493"/>

    <Button
            android:id="@+id/btnPause"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="일시정지"
            android:onClick="PauseButton" tools:layout_editor_absoluteY="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
        <!--앱 실행시 가장 먼저 실행되는 액티비티임을 선언-->